<p id="notice"><%= notice %></p>

<h1>Listing Histories</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Bookid</th>
      <th>Checkouttime</th>
      <th>Returntime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@histories %>
      <p>No history</p>
    <% else %>
    <% @histories.each do |history| %>
      <tr>>
        <td><%= history.userid %></td>
        <td><%= link_to history.bookid, controller: "books", action: "show", :id => history.bookid %></td>
        <td><%= history.checkouttime %></td>
        <td><%= history.returntime %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><% if history.returntime == '-1' %>
            <p class="Return the Book"><%= link_to "Return the Book", controller: "books", action: "return", :id => history.bookid, :hid => history.id %>
        <% end %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

