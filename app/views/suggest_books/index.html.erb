
<h1>Listing Suggest Books</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>ISBN</th>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Suggested By</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @suggest_books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.suggestU %></td>
        <td><%= link_to "Make it available", controller: "suggest_books", action: "available", :id => book.id  ,class: "btn btn-xs btn-default"%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-default" %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<br>
<hr style="border:3 double #987cb9" width="80%" color=#987cb9 SIZE=3>
