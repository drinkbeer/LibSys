<p id="notice"><%= notice %></p>

<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<% @curr_user = current_user() %>
<% @history = History.find_by_sql(" SELECT *
                                    FROM histories
                                    WHERE bookid = '#{@book.id}'
                                    AND returntime = -1 ") %>

<% @history.each do |history| %>
    <!--<p>-->
      <!--<strong>hh:</strong>-->
      <!--<%= history.id %>-->
      <!--<%= history.bookid %>-->
      <!--<%= history.userid %>-->
    <!--</p>-->

    <% if @book.status == '1' %>
        <p class="Check Out"><%= link_to "Check Out", controller: "books", action: "checkout", :id => @book.id %>
    <% elsif history.userid.to_s == @curr_user.id.to_s %>
        <p class="Return the Book"><%= link_to "Return the Book", controller: "books", action: "return", :id => @book.id %>
    <% else %>
        <% @user = User.find_by_sql(" SELECT *
                                    FROM users
                                    WHERE id = '#{history.userid}'") %>
        <% @user.each do |borrower| %>
            <p class="Borrower"><%= "Borrower:" + borrower.name %>
        <% end %>
    <% end %>
<% end %>



